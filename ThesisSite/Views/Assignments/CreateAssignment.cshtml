@model ThesisSite.ViewModel.Assignments.CreateAssignmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateAssignment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="GroupId" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueTo" class="control-label"></label>
                <input asp-for="DueTo" class="form-control" type="date" />
                <span asp-validation-for="DueTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control"/>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateAssignment" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListAssignments" asp-route-groupId="@Model.GroupId">Back to assignments</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
