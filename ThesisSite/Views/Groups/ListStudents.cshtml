@model ThesisSite.ViewModel.Group.ListStudentsViewModel

@{
    ViewData["Title"] = "ListStudents";
}


<h2>ListStudents</h2>

<table id="studentlist" class="table">
    <thead>
    <tr>
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Index number
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndexNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="RemoveFromGroup" asp-route-studentId="@item.Id" asp-route-groupId="@Model.GroupId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap.css" />
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#studentlist').DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 4 }
                ]
            });
        });
    </script>
}

